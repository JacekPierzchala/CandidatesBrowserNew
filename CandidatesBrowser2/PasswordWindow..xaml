<Window x:Class="CandidatesBrowser2.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CandidatesBrowser2"
        mc:Ignorable="d"
        Title="PasswordWindow" Height="120" Width="300" Topmost="True" Icon="iconKey.ico"
        Closing="Window_Closing">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label Margin="2,10,2,2" Padding="2" VerticalContentAlignment="Center" Content="Please provide password:" Grid.Row="0" Grid.Column="0"/>
        <PasswordBox VerticalContentAlignment="Center" Margin="2,10,2,2" Padding="2" Grid.Column="1" Grid.Row="0" x:Name="Passwordfield"></PasswordBox>
        <Button Grid.Row="1" Grid.ColumnSpan="2" x:Name="ConfirmPasswordButton" Click="ConfirmPasswordButton_Click"> Confirm</Button>
    </Grid>
</Window>
